<section class="container">
  <div class="columns">
    <div class="column">
      <article class="media">
        <figure class="media-left">
          <p class="image is-64x64 avatar">
            <%= image_tag  @github_user.avatar_url, class: 'avatar' %>
          </p>
        </figure>
        <div class="media-content">
          <div class="content">
            <p>
              <strong><%= @github_user.name %></strong> <small>@johnsmith</small> <small>31m</small>
              <br>
              <%= @github_user.followers %> followers
              <br>
              <%= @github_user.following %> following
            </p>
            <table class="table repos">
              <thead>
                <th>Name</th>
                <th>Description</th>
              </thead>
              <tbody>
                <% @github_user.repos.each do |user_repo| %>
                <tr>
                  <td class="repo-name"><%= user_repo.name %></td>
                  <td class="repo-description"><%= user_repo.description %></td>
                  <td class="repo-link"><%= link_to  "View on GitHub", "#{user_repo.html_url}" %></td>
                </tr>
                <% end %>
              </tbody>
            </table>
          </div>
          <nav class="level is-mobile">
            <div class="level-left">
              <a class="level-item">
                <span class="icon is-small"><i class="fas fa-reply"></i></span>
              </a>
              <a class="level-item">
                <span class="icon is-small"><i class="fas fa-retweet"></i></span>
              </a>
              <a class="level-item">
                <span class="icon is-small"><i class="fas fa-heart"></i></span>
              </a>
            </div>
          </nav>
        </div>
      </article>
    </div>
  </div>
</section>